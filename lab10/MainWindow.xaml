<Window x:Class="lab10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="3D Letters" Height="600" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <Viewport3D x:Name="viewport" Grid.Row="0"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" 
                    HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="X" HorizontalAlignment="Center"/>
                <Slider x:Name="SliderX" Minimum="-5" Maximum="5" Value="0" Width="200" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Y" HorizontalAlignment="Center"/>
                <Slider x:Name="SliderY" Minimum="-5" Maximum="5" Value="0" Width="200" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
            </StackPanel>

            <StackPanel>
                <TextBlock Text="Z" HorizontalAlignment="Center"/>
                <Slider x:Name="SliderZ" Minimum="-180" Maximum="180" Value="0" Width="200" TickFrequency="0.1" IsSnapToTickEnabled="True"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
